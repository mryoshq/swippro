---
import { Icon } from 'astro-icon';
import { Picture } from '@astrojs/image/components';
import Slider from '~/components/widgets/Slider.jsx';
import appleBadge from '~/assets/images/appstore.svg';
import googleBadge from '~/assets/images/google-badge.png';
import frame from '~/assets/images/Frame.svg';


interface CallToAction {
  text: string;
  href: string;
  icon?: string;
}

export interface Props {

  callToAction?: string | CallToAction;
  callToAction2?: string | CallToAction;
  image?: string | any;
  images?: string | any;
}

const {
 
  callToAction = await Astro.slots.render('callToAction'),
  callToAction2 = await Astro.slots.render('callToAction2'),
  image = await Astro.slots.render('image'),
  images = await Astro.slots.render('images'),
} = Astro.props;
---

<section class="relative w-full md:flex position-absolute md:h-auto">
  <div class="relative w-full h-full">
    {
      images && (
        <div class="relative h-full w-full top-0 left-0">
          <Slider client:visible images={images}  />
        </div>
      )
    }
  
    
        </div>
      </div>
    </div>

    <div style={{
      display: 'flex',
      justifyContent: 'center',
      alignItems: 'center',
      fontSize: '7vw',
      color: 'white',
      flexDirection: 'column',
      backgroundImage: `url(${frame.src})`,
      backgroundSize: 'cover',
      backgroundPosition: 'top',
    }}>
      <span>BUILD YOUR</span>
      <span style={{ color: 'rgb(70, 106, 139)' }}>NETWORK NOW!</span>
    </div>
    <style>
      @media (min-width: 425px) {
          .custom-flex {
              flex-direction: row;
              justify-content: space-around;
          }
      
          .custom-img {
              margin-bottom: 0;
          }
      }
      </style>
    <div class="pb-10 md:py-16 w-full mx-auto mt-[-1px]" style="background: rgba(32, 32, 32, 1);">
      <div class="relative">
          <div class="flex flex-col justify-center items-center custom-flex max-w-2xl mx-auto gap-4">
              <div class="flex w-full justify-center mb-4 custom-img">
                  <a href="#" target="_blank" rel="noopener">
                      <img
                          src={googleBadge.src}
                          alt="Download our app from Google Play Store"
                          style="height: auto; width: 25rem; max-width: calc(100vw / 2.2);"
                      />
                  </a>
              </div>
              <div class="flex w-full justify-center">
                  <a href="#" target="_blank" rel="noopener">
                      <img
                          src={appleBadge.src}
                          alt="Download our app from Apple App Store"
                          style="height: auto; width: 25rem; max-width: calc(100vw / 2);"
                      />
                  </a>
              </div>
          </div>
      </div>
  </div>
  
  
  </div>
</section>


