---
import Layout from '~/layouts/PageLayout.astro';

import { MetaSEO } from '~/types';

export interface Props {}

const { frontmatter } = Astro.props;

const meta: MetaSEO = {
  title: frontmatter?.title,
};
---

<Layout {meta}>
    <section class="flex px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
        <aside class="w-1/5 mr-4 border-r-2 border-gray-300">
          {/* List goes here */}
          <ul>
            <li class="mt-2 mb-2">
              <a 
                href="#" 
                class="py-2 font-bold text-2xl border block text-black" 
                style={{
                  cursor: 'pointer',
                  textDecoration: 'none',
                }}
                onmouseover="this.style.backgroundColor='rgb(70, 106, 139)'; this.style.color='white';"
                onmouseout="this.style.backgroundColor='transparent'; this.style.color='black';"
              >
                Item 1
              </a>
            </li>
            <li class="mt-2 mb-2">
              <a 
                href="#" 
                class="py-2 font-bold text-2xl border block text-black" 
                style={{
                  cursor: 'pointer',
                  textDecoration: 'none',
                }}
                onmouseover="this.style.backgroundColor='rgb(70, 106, 139)'; this.style.color='white';"
                onmouseout="this.style.backgroundColor='transparent'; this.style.color='black';"
              >
                Item 2
              </a>
            </li>
            <li class="mt-2 mb-2">
              <a 
                href="#" 
                class="py-2 font-bold text-2xl border block text-black" 
                style={{
                  cursor: 'pointer',
                  textDecoration: 'none',
                }}
                onmouseover="this.style.backgroundColor='rgb(70, 106, 139)'; this.style.color='white';"
                onmouseout="this.style.backgroundColor='transparent'; this.style.color='black';"
              >
                Item 3
              </a>
            </li>
            {/* Add more list items as necessary */}
          </ul>
        </aside>
        <main class="w-4/5">
          <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">{frontmatter.title}</h1>
          <div
            class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
          >
            <slot />
          </div>
        </main>
      </section>
      
      
    
    
</Layout>
